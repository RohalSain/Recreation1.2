<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/parent"
android:background="@color/colorAccent"
tools:context="com.developer.rohal.recreationcenteer.fragment.FragmentHome">
<RelativeLayout
    android:layout_below="@+id/top_Home1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container1">
    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingHorizontal="15dp"
        android:weightSum="3"
        android:id="@+id/top_Home1">
        <RelativeLayout
            android:id="@+id/side_button1_lay"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/side_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                android:paddingStart="10dp"
                android:src="@drawable/ic_menu_white" />
        </RelativeLayout>
        <TextView
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Home"
            android:id="@+id/HomeText"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/logoColor"
            android:textSize="24sp" />
        <RelativeLayout
            android:id="@+id/notification_button1_lay"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:paddingEnd="10dp"
                android:scaleType="fitEnd"
                android:id="@+id/notificationHome1"
                android:src="@drawable/ic_notification_white" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="@android:color/white"
        android:id="@+id/top_Home2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_Home1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:id="@+id/sec"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Location"
            android:background="@android:color/transparent"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:id="@+id/locationTextHome" />
        <Button
            android:id="@+id/locationHomeButton"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Change"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/white"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_blue"
            />
    </RelativeLayout>
    <Button
        android:layout_below="@+id/sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        android:text="Join Team"
        android:textAllCaps="false"
        android:id="@+id/joinTeamButton"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/current_btn_bg"/>
    <Button
        android:layout_below="@+id/joinTeamButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        android:text="Create Team"
        android:textAllCaps="false"
        android:id="@+id/createTeamButton"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/current_btn_bg"/>
    <Button
        android:layout_below="@+id/createTeamButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@android:color/white"
        android:text="Current Match"
        android:textAllCaps="false"
        android:id="@+id/currentMatch"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/current_btn_bg"/>
</RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/sidemenu_layout"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/sideColor">
        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="300dp"
            app:realtimeOverlayColor="@color/BlurColor" />
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp">
        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/userPic_Side"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            fresco:placeholderImage="@drawable/profileplaceholder"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@android:color/white"
            fresco:roundingBorderWidth="2dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/name_Side"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:text="Mark Lee"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/Home_Side"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginVertical="15dp"
            android:drawableLeft="@drawable/ic_home_orange"
            android:drawablePadding="10dp"
            android:paddingLeft="30dp"
            android:text="Home"
            android:textColor="@android:color/white" />
        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/Home_Side"
            android:background="@color/viewColor2" />
        <TextView
            android:layout_below="@+id/v"
            android:id="@+id/myTeam_Side"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginVertical="15dp"
            android:drawableLeft="@drawable/ic_team_orange"
            android:drawablePadding="10dp"
            android:paddingLeft="30dp"
            android:text="My Team"
            android:textColor="@android:color/white" />
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/myTeam_Side"
            android:background="@color/viewColor2" />
        <TextView
            android:id="@+id/settings_Side"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/v1"
            android:layout_marginVertical="15dp"
            android:drawableLeft="@drawable/ic_setting_orange"
            android:drawablePadding="10dp"
            android:paddingLeft="30dp"
            android:text="Settings"
            android:textColor="@android:color/white" />
        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/settings_Side"
            android:background="@color/viewColor2" />
        <TextView
            android:id="@+id/logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v4"
            android:layout_marginVertical="15dp"
            android:drawableLeft="@drawable/ic_logout_orange"
            android:drawablePadding="10dp"
            android:paddingBottom="40dp"
            android:paddingLeft="30dp"
            android:text="Logout"
            android:textColor="@android:color/white" />
    </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
